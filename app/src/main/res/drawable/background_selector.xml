<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State saat tombol ditekan -->
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#808080" /> <!-- Warna bayangan -->
                    <corners android:radius="8dp" /> <!-- Bulevar radius sudut (dapat disesuaikan) -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- Warna latar belakang tombol saat ditekan -->
                    <corners android:radius="8dp" /> <!-- Bulevar radius sudut (dapat disesuaikan) -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- State normal (tidak ditekan) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang tombol saat normal -->
            <corners android:radius="8dp" /> <!-- Bulevar radius sudut (dapat disesuaikan) -->
        </shape>
    </item>
</selector>